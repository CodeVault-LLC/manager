{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "../../packages/shared/**/*.d.ts",
    "../../packages/shared/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@main/*": ["./src/main/*"],
      "@shared/*": ["../../packages/shared/*"]
  },
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2022"]
  }
}
